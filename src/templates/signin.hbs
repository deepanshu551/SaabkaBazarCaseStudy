<section class="container">
  <div class="row signin-container">
    <div class="signin-info">
      <h1 class="title">Login</h1>
      <p class="desc">Get access to your Orders, Wishlist and
        Recommendations</p>
    </div>
    <div class="signin-form">
      <form id="signinForm">
        <div class="form-floating signin-email">
          <input type="email" class="form-control" id="loginEmail" name="email" placeholder="Email" required>
          <label for="loginEmail">Email</label>
        </div>
        <div class="form-floating signin-password">
          <input type="password" class="form-control" id="loginPassword" name="password" placeholder="Password" required>
          <label for="loginPassword">Password</label>
        </div>
        <button class="btn signin-btn" type="submit">Login</button>
      </form>
    </div>
  </div>
</section>